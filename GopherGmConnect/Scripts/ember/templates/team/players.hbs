

<button {{action 'openModal' 'modal' }} class="button">Sort Players</button>

<button {{action 'toggleView' }}>Switch View</button>

{{#if showBasicInfo}}

{{#each}} 

{{view App.TeamplayersitemView}}

{{/each}}

{{/if}}



{{#if showStats}}
<div class="line-sep">
	<div class="row">
		<div class="small-12 columns">
			<h2>Forward Lines</h2>
		</div>
	</div>
	
	{{#each forwardLines}}
<div class="row">
    {{#each itemController="player"}}
    <div class="small-12 medium-4 columns">
        <span class="overall-box">
            {{unbound overall}}
        </span>
        <span class="first-name">
            {{unbound lastName}}
        </span>
        <span>
            {{unbound linePosition}}
        </span>
        <div class="star-container">
            {{#each potentialStars}}
            <i class="fa {{unbound starClass}} {{unbound color}}"></i>
            {{/each}}
        </div>

        <div class="small-progress">
            <span class="value-meter" style="width: {{unbound tradeValuePercent}}%"></span>
        </div>
    </div>
    {{/each}}
</div>
	{{/each}}
	</div>

<div class="line-sep">
	<div class="row">
		<div class="small-12 columns">
			<h2>Defensive Pairs</h2>
		</div>
	</div>
    {{#each controllers.team.dpairs}}
    <div class="row">
        {{#each itemController="player"}}
        <div class="small-6 columns">
            <span class="overall-box">
                {{unbound overall}}
            </span>
            <span class="first-name">
                {{unbound lastName}}
            </span>
            <span>
                {{unbound linePosition}}
            </span>
            <div class="star-container">
                {{#each potentialStars}}
                <i class="fa {{unbound starClass}} {{unbound color}}"></i>
                {{/each}}
            </div>


            <div class="small-progress">
                <span class="value-meter" style="width: {{unbound tradeValuePercent}}%"></span>
            </div>
        </div>
        {{/each}}
    </div>
    {{/each}}
</div>
{{/if}}


