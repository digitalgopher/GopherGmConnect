<div class="row">
    <div class="small-2 columns">
        <img class="player-image-crop" {{bind-attr src="startingGoalie.imageUrl" }} />
    </div>
    <div class="small-6 columns">
        {{#link-to 'player' startingGoalie}}
        {{unbound startingGoalie.lastName}}
        {{/link-to}}
    </div>
    <div class="small-4 columns">
        {{unbound startingGoalie.singleYearStats.goalsAgainstAverage}}
    </div>
</div>



{{/if}}