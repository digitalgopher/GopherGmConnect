<div class="col-6">
    <div class="stats-box contract">
        <span class="stats-box-title">Contract</span>
        <div class="numberBox">
            <span>Years</span>
            <div class="numberBoxValueContainer">
                <span class="numberBoxValue">{{yearsLeft}}</span>
            </div>
        </div>
        <div class="numberBox salary">
            <span>Salary</span>
            <div class="numberBoxValueContainer">
                <span class="numberBoxValue">${{salarySmall}}</span>
            </div>
        </div>

        <div class="numberBox contracttype">
            <span>Type</span>
            <div class="numberBoxValueContainer">
                <span class="numberBoxValue">{{contractType}}</span>
            </div>
        </div>
    </div>
</div>